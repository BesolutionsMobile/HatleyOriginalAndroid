<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".Scenarios.SideMenuScenarios.Controllers.Activities.your_places">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/_5ssp"
        android:id="@+id/places_list"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nodata"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
 <LinearLayout
     android:layout_width="@dimen/_250sdp"
     android:layout_height="@dimen/_30sdp"
     android:layout_gravity="center"
     android:layout_marginTop="@dimen/_15sdp"
     android:weightSum="1"
     android:orientation="horizontal">
  <EditText
      android:layout_weight=".88"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:id="@+id/add_new_place"
      android:editable="false"
      android:hint="@string/add_new_place"
      android:background="@drawable/edit_bg3"
      android:paddingLeft="@dimen/_10sdp"
      />
     <ImageView
         android:layout_weight=".12"
         android:layout_width="0dp"
         app:srcCompat="@drawable/ic_add_black_24dp"
         android:padding="@dimen/_3sdp"
         android:tint="@android:color/white"
         android:id="@+id/added_sql"
         android:background="@color/fcolor"
         android:layout_height="match_parent"
         />
 </LinearLayout>
</LinearLayout>