<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="300dp">

    <LinearLayout
        android:id="@+id/mapFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/cancel"
                android:layout_gravity="right"
                android:id="@+id/cancel"
                android:tint="#919191"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/order_info"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/fcolor"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="ahmed mohamed"
            android:gravity="center"
            android:id="@+id/username"
            android:textColor="@color/fcolor"
            android:textSize="@dimen/_11ssp"/>

        <RatingBar
            android:id="@+id/ratings"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:isIndicator="true"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginTop="@dimen/_1sdp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:layout_gravity="center"
            android:stepSize="1.7"
            android:layout_height="wrap_content"
            android:progressTint="@color/fcolor"
            android:progressBackgroundTint="#000000"
            android:secondaryProgressTint="#ffffff"
            android:numStars="5"
            android:rating="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="@dimen/_11ssp"
                android:id="@+id/orderscount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/before_order"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/fcolor"
            android:id="@+id/order_name"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textStyle="bold"
            android:text="two burger"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/fcolor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/from"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp">

                <TextView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/fcolor"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/to"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </LinearLayout>

        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map2"
            android:layout_marginTop="@dimen/_10sdp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            tools:context="com.carsyalla.admin.mapss.MapsActivity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/expected_arrival_time"
                    android:gravity="center"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/fcolor"/>

                <EditText
                    android:layout_width="@dimen/_100sdp"
                    android:id="@+id/expected_arrival_time"
                    android:layout_height="@dimen/_25sdp"
                    android:hint="EX : 12:45 P.M"
                    android:textSize="@dimen/_11ssp"
                    android:editable="false"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center"
                    android:background="@drawable/price_order_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/expected_price"
                    android:gravity="center"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/fcolor"/>

                <EditText
                    android:layout_width="@dimen/_100sdp"
                    android:id="@+id/expected_price"
                    android:layout_height="@dimen/_25sdp"
                    android:hint="EX : 100 L.E"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/_11ssp"
                    android:background="@drawable/price_order_bg"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/create_offer_to_customer"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/create_offer"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/buttonbg"
            android:textColor="@android:color/white"/>

    </LinearLayout>


</LinearLayout>