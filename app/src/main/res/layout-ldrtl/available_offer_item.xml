<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/offer_item"
    android:layout_height="@dimen/_110sdp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/_109sdp"
           android:weightSum="1"
           android:orientation="horizontal">

      <LinearLayout
          android:layout_weight=".7"
          android:layout_width="0dp"
          android:gravity="top|left"
          android:paddingRight="@dimen/_5sdp"
          android:paddingTop="@dimen/_10sdp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="@dimen/_20sdp"
               android:id="@+id/username"
               android:textColor="@color/fcolor"
               android:textSize="@dimen/_11ssp"
               />
          <RatingBar
              android:id="@+id/rating"
              style="?android:attr/ratingBarStyleSmall"
              android:layout_width="wrap_content"
              android:isIndicator="true"
              android:focusable="false"
              android:clickable="false"
              android:scaleX="1.4"
              android:scaleY="1.4"
              android:layout_gravity="center|right"
              android:stepSize="1.7"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_height="wrap_content"
              android:progressTint="@color/fcolor"
              android:progressBackgroundTint="#000000"
              android:secondaryProgressTint="#ffffff"
              android:numStars="5"
              android:rating="4" />


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/_20sdp"
              android:layout_marginTop="@dimen/_10sdp"
              android:orientation="horizontal"
              android:weightSum="1">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/_3sdp"
                  android:layout_marginRight="@dimen/_3sdp"
                  android:layout_weight=".5"
                  android:background="@drawable/editsbg"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:gravity="center"
                  android:layout_marginStart="@dimen/_2sdp">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:drawablePadding="@dimen/_10sdp"
                      android:gravity="center"
                      android:text="@string/egp"
                      android:layout_marginLeft="@dimen/_3sdp"
                      android:textColor="@color/fcolor"
                      android:textSize="@dimen/_8sdp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/price"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:drawablePadding="@dimen/_10sdp"
                      android:gravity="center"
                      android:textColor="@color/fcolor"
                      android:textSize="@dimen/_8sdp"
                      android:textStyle="bold" />

              </LinearLayout>
              <LinearLayout
                  android:layout_weight=".52"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@drawable/buttons_bg"
                      android:drawableLeft="@drawable/offermoneyp"
                      android:drawablePadding="@dimen/_5sdp"
                      android:gravity="center|left"
                      android:paddingLeft="@dimen/_10sdp"
                      android:text="@string/offer_price"
                      android:textColor="@color/quantum_white_text"
                      android:textSize="@dimen/_10ssp" />
              </LinearLayout>



          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/_25sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:orientation="horizontal"
              android:weightSum="1"
              >
              <LinearLayout
                  android:layout_weight=".5"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_20sdp"
                  android:layout_marginLeft="@dimen/_3sdp"
                  android:layout_marginRight="@dimen/_3sdp"
                  android:paddingRight="@dimen/_5sdp"
                  >
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_20sdp"
                      android:background="@drawable/editsbg"
                      android:gravity="center"
                      android:textSize="@dimen/_8sdp"
                      android:id="@+id/time"
                      android:textStyle="bold"
                      android:textColor="@color/fcolor"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_weight=".52"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  >

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_20sdp"
                      android:background="@drawable/buttons_bg"
                      android:drawableLeft="@drawable/ic_access_time_black_24dp"
                      android:drawablePadding="@dimen/_3sdp"
                      android:gravity="center|left"
                      android:textSize="@dimen/_10ssp"
                      android:paddingLeft="@dimen/_10sdp"
                      android:text="@string/offer_time"
                      android:textColor="@color/quantum_white_text"
                      />
              </LinearLayout>

          </LinearLayout>
      </LinearLayout>

           <androidx.cardview.widget.CardView
               android:layout_weight=".3"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               app:cardCornerRadius="@dimen/_5sdp"
               app:cardElevation="@dimen/_5sdp"
               android:elevation="@dimen/_5sdp"
               app:cardMaxElevation="@dimen/_5sdp"
               android:layout_margin="@dimen/_7sdp"
               app:cardPreventCornerOverlap="true">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/userimg"
                   android:src="@drawable/starplaceholder"
                   android:cropToPadding="true"
                   android:scaleType="centerCrop"
                   />
           </androidx.cardview.widget.CardView>
       </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:src="#dedfde"/>
</LinearLayout>