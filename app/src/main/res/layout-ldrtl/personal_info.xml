<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Scenarios.SideMenuScenarios.Controllers.Activities.personal_info">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linChangeName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center|right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:id="@+id/name"
            android:paddingLeft="@dimen/_3sdp"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/personalinfouser"
            android:padding="@dimen/_3sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linChangeEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center|right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:id="@+id/email"
            android:paddingLeft="@dimen/_3sdp"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/personalinfomail"
            android:padding="@dimen/_3sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linChangePass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center|right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
                android:paddingLeft="@dimen/_3sdp"
            android:text="@string/changepass"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/personallock"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linChangePhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center|right"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:text="@string/addphone"
            android:paddingRight="@dimen/_3sdp"
            />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/addphone"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linChangeId"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center|right"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:text="@string/nationalid"
            android:paddingLeft="@dimen/_3sdp"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/nationalid"
            android:padding="@dimen/_3sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linChangePhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center|right"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:text="@string/addphoto"
            android:paddingLeft="@dimen/_3sdp"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/addphoto"
            android:padding="@dimen/_3sdp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center|right"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:text="@string/language"
            android:paddingLeft="@dimen/_3sdp"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_language_24"
            android:padding="@dimen/_3sdp"
            />

    </LinearLayout>
</LinearLayout>