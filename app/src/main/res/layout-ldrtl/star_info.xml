<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="300dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/starinfo"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/fcolor"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_gravity="center"
                app:cardMaxElevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_7sdp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/userimg"
                    android:scaleType="fitXY"
                    android:src="@drawable/starplaceholder"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:id="@+id/name"
                android:text="sample"
                android:textColor="@color/fcolor"
                android:textSize="@dimen/_11ssp"/>

            <RatingBar
                android:id="@+id/ratings"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:isIndicator="true"
                android:focusable="false"
                android:clickable="false"
                android:scaleX="1.4"
                android:scaleY="1.4"
                android:layout_gravity="center"
                android:stepSize="1.0"
                android:layout_height="wrap_content"
                android:progressTint="@color/fcolor"
                android:progressBackgroundTint="#000000"
                android:secondaryProgressTint="#ffffff"
                android:numStars="5"
                android:rating="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_nums"
                    android:text="20"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="orders before"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/buttons_bg"
                        android:drawableStart="@drawable/offermoneyp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|right"
                        android:textSize="@dimen/_10ssp"
                        android:paddingStart="@dimen/_8sdp"
                        android:text="@string/offer_price"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:background="@drawable/editsbg"
                    android:paddingEnd="@dimen/_5sdp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/price"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/fcolor"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:textColor="@color/fcolor"
                        android:textStyle="bold"
                        android:text="@string/egp"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="1">

                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/buttons_bg"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|right"
                        android:textSize="@dimen/_10ssp"
                        android:paddingStart="@dimen/_8sdp"
                        android:text="@string/offer_time"
                        android:textColor="@android:color/white"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/editsbg"
                        android:paddingStart="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:id="@+id/hours"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@color/fcolor"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/approveopenchat"
                android:textSize="@dimen/_12ssp"
                android:id="@+id/approve"
                android:textAllCaps="false"
                android:background="@drawable/buttonbg"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/accept_bg"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:id="@+id/reject"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:text="@string/reject"
                        android:textColor="@android:color/white"/>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/dismiss_bg"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textAllCaps="false"
                        android:id="@+id/dismiss"
                        android:layout_weight="1"
                        android:text="@string/dismiss"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>